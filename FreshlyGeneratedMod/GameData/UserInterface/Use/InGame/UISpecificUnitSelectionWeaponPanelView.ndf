private WeaponPanelContentList is BUCKListDescriptor
(
    ElementName = 'WeaponPanelContentList'

    ComponentFrame = TUIFramePropertyRTTI
    (
        RelativeWidthHeight = [1.0, 0.0]
    )

    Axis = ~/ListAxis/Vertical

    Elements =
    [
        // affiche le type de l'arme
